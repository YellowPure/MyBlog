<%- include header%>
<form method='post'>
	标题：<br />
	<input type='text' name='title' disabled='disabled' value='<%= post.title %>'><br />
	标签：<br />
	<input type='text' name='tag1' value='<%= post.tags[0]%>' disabled='disabled' />
	<input type='text' name='tag2' value='<%= post.tags[1]%>' disabled='disabled' />
	<input type='text' name='tag3' value='<%= post.tags[2]%>' disabled='disabled' /><br />
	正文：<br />
	<textarea name='editor' name='post' rows='20' cols='100'><%= post.post%></textarea><br />
	<input type='submit' value='保存修改'>
</form>
<script>
            CKEDITOR.replace( 'editor' );
</script>
<%- include footer%>